{
  "compilerOptions": {
    "outDir": ".",
    "allowJs": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "target": "ES2018"
  },
  "include": [
    "./server/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}