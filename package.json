{
  "name": "mood",
  "version": "1.0.0",
  "description": "Publish a mood tracker to Zeit.",
  "private": true,
  "dependencies": {
    "@google-cloud/firestore": "^2.2.9",
    "@rgrannell/errors": "8.2.0",
    "apexcharts": "^3.8.6",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "chai": "4.2.0",
    "client-sessions": "^0.8.0",
    "cookie-session": "^1.3.3",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "firebase-admin": "^8.5.0",
    "google-auth-library": "5.2.0",
    "http-errors": "1.7.3",
    "husky": "^3.0.5",
    "lit-html": "^1.1.2",
    "nanoid": "^2.1.0",
    "node-fetch": "^2.6.0",
    "passport": "^0.4.0",
    "passport-auth0": "^1.2.1",
    "signale": "1.4.0",
    "vega": "^5.6.0",
    "vega-embed": "^5.1.2",
    "vega-lite": "^4.0.0-beta.2"
  },
  "devDependencies": {
    "@rgrannell/index": "8.2.0",
    "@rgrannell/pulp": "8.4.0",
    "@zeit/ncc": "^0.20.5",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "now": "16.1.3",
    "puppeteer-firefox": "^0.5.0",
    "standard": "^14.1.0",
    "stylelint": "10.1.0",
    "stylelint-config-standard": "18.3.0",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.8",
    "webpack-merge": "^4.2.2"
  },
  "scripts": {
    "build": "node --experimental-modules -r dotenv/config --no-warnings pulpfile.mjs build --production",
    "build:watch": "find client routes | entr -s 'npm run build'",
    "live-reload": "live-reload --build 'npm run build:watch' --site index.html --public_folder public",
    "run:api": "node --experimental-modules -r dotenv/config --no-warnings pulpfile.mjs serve-api",
    "run:client": "node --experimental-modules -r dotenv/config --no-warnings pulpfile.mjs serve-public",
    "dev": "docker-compose up",
    "dev:watch": "find build routes client api monitoring tools | entr sh -c 'docker-compose up'",
    "deploy": "export NODE_ENV=production; npm run build; time node_modules/.bin/now",
    "clean": "find public -name '*.js' -delete; find public -name '*.js.map' -delete"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rgrannell1/mood.git"
  },
  "author": "Róisín Grannell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rgrannell1/mood/issues"
  },
  "homepage": "https://github.com/rgrannell1/mood#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  }
}
